@model GestaoEventosAcademicos.Models.Evento

@{
    ViewData["Title"] = "Confirmação de Inscrição";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-body">
            <h2 class="card-title text-center text-primary">Confirmação de Inscrição</h2>
            <hr />
            <p class="fw-bold">Você está prestes a se inscrever no seguinte evento:</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Nome:</strong> @Model.Nome</li>
                <li class="list-group-item"><strong>Data:</strong> @Model.Data.ToString("dd/MM/yyyy")</li>
                <li class="list-group-item"><strong>Local:</strong> @Model.Local</li>
                <li class="list-group-item"><strong>Descrição:</strong> @Model.Duração</li>
            </ul>
            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancelar</a>
                <form asp-action="Inscrever" method="post">
                    <input type="hidden" name="eventoId" value="@Model.EventoID" />
                    <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Confirmar Inscrição</button>
                </form>
            </div>
        </div>
    </div>
</div>
