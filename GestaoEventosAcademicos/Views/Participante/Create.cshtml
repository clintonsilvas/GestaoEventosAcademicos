@model GestaoEventosAcademicos.Models.Participante

@{
    ViewData["Title"] = "Criar Participante";
}

<h2 class="text-primary"><i class="bi bi-person-plus"></i> Criar Participante</h2>
<hr />

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card shadow-lg p-4">
            <form asp-action="Create">
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome..." />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DataNascimento" class="form-label"></label>
                    <input asp-for="DataNascimento" type="date" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Digite o e-mail..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Senha" class="form-label"></label>
                    <input asp-for="Senha" type="password" class="form-control" placeholder="Digite a senha..." />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Telefone" class="form-label"></label>
                    <input asp-for="Telefone" class="form-control" placeholder="Digite o telefone..." />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                    <input class="form-check-input" asp-for="Certificado" />
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.Certificado)
                    </label>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CursoID" class="form-label"></label>
                    <select asp-for="CursoID" class="form-control" asp-items="ViewBag.Cursos">
                        <option value="">Selecione um curso</option>
                    </select>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Criar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
