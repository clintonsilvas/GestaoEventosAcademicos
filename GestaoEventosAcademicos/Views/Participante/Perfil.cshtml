@model GestaoEventosAcademicos.Models.Participante

@{
    ViewData["Title"] = "Meu Perfil";
}

<h2 class="text-primary"><i class="bi bi-person-circle"></i> Meu Perfil</h2>
<hr />

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">@TempData["Erro"]</div>
}

<div class="card shadow-lg p-4">
    <div class="row">
        <div class="col-md-6">
            <p><strong>Nome:</strong> @Model.Nome</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Telefone:</strong> @Model.Telefone</p>
            <p><strong>Data de Nascimento:</strong> @Model.DataNascimento.ToString("dd/MM/yyyy")</p>
            <p><strong>Curso:</strong> @(Model.Curso != null ? Model.Curso.Nome : "Não informado")</p>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="MeusEventos" class="btn btn-primary">
        <i class="bi bi-calendar-event"></i> Meus Eventos
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar
    </a>
</div>
