@model GestaoEventosAcademicos.Models.Participante

@{
    ViewData["Title"] = "Detalhes do Participante";
}

<h2 class="text-primary"><i class="bi bi-info-circle"></i> Detalhes do Participante</h2>
<hr />

<div class="card shadow-lg p-4">
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Nome:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-3 fw-bold">Data de Nascimento:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.DataNascimento)</dd>

        <dt class="col-sm-3 fw-bold">Email:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3 fw-bold">Telefone:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefone)</dd>

        <dt class="col-sm-3 fw-bold">Certificado:</dt>
        <dd class="col-sm-9">@(Model.Certificado ? "Sim" : "Não")</dd>

        <dt class="col-sm-3 fw-bold">Curso:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Curso.Nome)</dd>

        <dt class="col-sm-3 fw-bold">Evento:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Evento.Nome)</dd>
    </dl>
</div>

<div class="text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.ParticipanteID" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar
    </a>
</div>
