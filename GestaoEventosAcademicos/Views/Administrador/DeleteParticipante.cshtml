@model GestaoEventosAcademicos.Models.Participante

@{
    ViewData["Title"] = "Excluir Participante";
}

<h2 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Confirmar Exclusão</h2>
<hr />

<div class="card shadow-lg p-4">
    <h4 class="text-danger">Tem certeza que deseja excluir este participante?</h4>
    <dl class="row">
        <dt class="col-sm-4">Nome:</dt>
        <dd class="col-sm-8">@Model.Nome</dd>

        <dt class="col-sm-4">Email:</dt>
        <dd class="col-sm-8">@Model.Email</dd>

        <dt class="col-sm-4">Curso:</dt>
        <dd class="col-sm-8">@Model.Curso?.Nome</dd>
    </dl>

    <form asp-action="DeleteParticipanteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="text-center">
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Excluir</button>
            <a asp-action="ListarParticipantes" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancelar</a>
        </div>
    </form>
</div>
