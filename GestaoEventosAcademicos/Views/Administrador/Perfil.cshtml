@model GestaoEventosAcademicos.Models.Administrador

@{
    ViewData["Title"] = "Meu Perfil";
}

<h1 class="mb-4">Meu Perfil</h1>

@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success">@TempData["Sucesso"]</div>
}
@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">@TempData["Erro"]</div>
}

<div class="card shadow-lg p-4">
    <h4><i class="bi bi-person"></i> @Model.Nome</h4>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Telefone:</strong> @Model.Telefone</p>

    <a asp-action="EditarPerfil" class="btn btn-warning"><i class="bi bi-pencil"></i> Editar Perfil</a>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Voltar</a>
</div>
