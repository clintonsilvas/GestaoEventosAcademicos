@model GestaoEventosAcademicos.Models.Participante

<h2>Cadastrar Novo Participante</h2>

<form asp-action="CreateParticipante" method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-mail</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>

    <div class="mb-3">
        <label asp-for="Telefone" class="form-label">Telefone</label>
        <input asp-for="Telefone" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Senha</label>
        <input name="senha" type="password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="DataNascimento" class="form-label">Data de Nascimento</label>
        <input asp-for="DataNascimento" class="form-control" type="date" required />
    </div>

    <div class="form-group">
        <label asp-for="CursoID" class="control-label"></label>
        <select asp-for="CursoID" class="form-control" asp-items="ViewBag.CursoID"></select>
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>


