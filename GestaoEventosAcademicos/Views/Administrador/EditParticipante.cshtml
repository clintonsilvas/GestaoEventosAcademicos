@model GestaoEventosAcademicos.Models.Participante

@{
    ViewData["Title"] = "Editar Participante";
}

<h2 class="text-primary"><i class="bi bi-pencil-square"></i> Editar Participante</h2>
<hr />

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card shadow-lg p-4">
            <form asp-action="EditParticipante">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Telefone" class="form-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DataNascimento" class="form-label"></label>
                    <input asp-for="DataNascimento" type="date" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CursoID" class="form-label">Curso</label>
                    <select asp-for="CursoID" class="form-control" asp-items="ViewBag.CursoID"></select>
                    <span asp-validation-for="CursoID" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Nova Senha (opcional)</label>
                    <input type="password" name="senha" class="form-control" placeholder="Digite uma nova senha" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Salvar</button>
                    <a asp-action="ListarParticipantes" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}