@model IEnumerable<GestaoEventosAcademicos.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Participantes";
}

<h1 class="mb-4">Lista de Participantes</h1>

@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Sucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Erro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    @foreach (var participante in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm rounded-lg border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">@participante.Nome</h5>
                    <p class="card-text">
                        <strong>Email:</strong> @participante.Email <br />
                        <strong>Telefone:</strong> @participante.Telefone
                    </p>

                    <div class="d-flex justify-content-between">
                        <div>
                            <!-- Botões de ações -->
                            <a asp-action="EditParticipante" asp-route-id="@participante.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="DetailsParticipante" asp-route-id="@participante.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="DeleteParticipante" asp-route-id="@participante.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<a asp-action="CreateParticipante" class="btn btn-primary mt-3">
    <i class="bi bi-person-plus-fill"></i> Adicionar Participante
</a>


