@model IEnumerable<GestaoEventosAcademicos.Models.Administrador>

@{
    ViewData["Title"] = "Administradores";
}

<h1 class="mb-4">Administradores</h1>

@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Sucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Erro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    @foreach (var admin in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg rounded-lg border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">@admin.Nome</h5>
                    <p class="card-text">
                        <strong>Email:</strong> @admin.Email <br />
                        <strong>Telefone:</strong> @admin.Telefone
                    </p>

                    <div class="d-flex justify-content-between">
                        <div>
                            <!-- Botões de ações -->
                            <a asp-action="Details" asp-route-id="@admin.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@admin.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>

                        <div>
                            <a asp-action="EventosAdministrados" asp-route-id="@admin.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-calendar-check"></i> Eventos
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Criar Novo Administrador
    </a>
</div>
