@model GestaoEventosAcademicos.Models.Administrador

@{
    ViewData["Title"] = "Excluir Administrador";
}

<h2 class="text-danger"><i class="bi bi-trash"></i> Excluir Administrador</h2>
<hr />

<div class="alert alert-warning">
    <h4>Tem certeza que deseja excluir este administrador?</h4>
</div>
<form asp-action="DeleteAdm">
    <input type="hidden" asp-for="Id" />
    <div class="card shadow-lg p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Nome:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-3 fw-bold">E-mail:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 fw-bold">Telefone:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefone)</dd>
        </dl>

    
        <div class="text-center">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Excluir
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
        </div>
    
    </div>
</form>
