@model GestaoEventosAcademicos.Models.Curso

@{
    ViewData["Title"] = "Excluir Curso";
}

<h2 class="text-danger"><i class="bi bi-trash"></i> Excluir Curso</h2>
<hr />

<div class="alert alert-warning">
    <h4>Tem certeza que deseja excluir este curso?</h4>
</div>

<div class="card shadow-lg p-4">
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Nome:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CursoID" />
        <div class="text-center">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Excluir
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>
