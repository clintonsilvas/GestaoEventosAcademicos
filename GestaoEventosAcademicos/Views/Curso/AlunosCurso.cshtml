@model GestaoEventosAcademicos.Models.Curso

@{
    ViewData["Title"] = "Detalhes do Curso";
}

<h2 class="text-primary"><i class="bi bi-info-circle"></i> Detalhes do Curso</h2>
<hr />

<div class="card shadow-lg p-4">
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Nome:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>
    </dl>

    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model?.CursoID" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>

<h4 class="mt-4 text-primary"><i class="bi bi-people"></i> Alunos Matriculados</h4>

@if (Model.Participantes != null && Model.Participantes.Any())
{
    <div class="card shadow-lg p-4 mt-3">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Telefone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var aluno in Model.Participantes)
                {
                    <tr>
                        <td>@aluno.Nome</td>
                        <td>@aluno.Email</td>
                        <td>@aluno.Telefone</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mt-3">Não há alunos matriculados neste curso.</div>
}
