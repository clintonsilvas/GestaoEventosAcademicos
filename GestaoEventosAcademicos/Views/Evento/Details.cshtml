@model GestaoEventosAcademicos.Models.Evento
@{
    ViewData["Title"] = "Detalhes do Evento";
}

<h2 class="text-primary"><i class="bi bi-info-circle"></i> Detalhes do Evento</h2>
<hr />

<div class="card shadow-lg p-4">
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Nome:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-3 fw-bold">Local:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Local)</dd>

        <dt class="col-sm-3 fw-bold">Data:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Data)</dd>
    </dl>

    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model?.EventoID" class="btn btn-warning"><i class="bi bi-pencil"></i> Editar</a>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Voltar</a>
    </div>
</div>