@model GestaoEventosAcademicos.Models.Evento

@{
    ViewData["Title"] = "Criar Evento";
}

<h2 class="text-primary"><i class="bi bi-calendar-plus"></i> Criar Evento</h2>
<hr />

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card shadow-lg p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Local" class="form-label"></label>
                    <input asp-for="Local" class="form-control" />
                    <span asp-validation-for="Local" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Data" class="form-label"></label>
                    <input asp-for="Data" type="date" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Duração" class="form-label"></label>
                    <input asp-for="Duração" class="form-control" />
                    <span asp-validation-for="Duração" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CodigoParticipacao" class="form-label"></label>
                    <input asp-for="CodigoParticipacao" class="form-control" />
                    <span asp-validation-for="CodigoParticipacao" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Capacidade" class="form-label"></label>
                    <input asp-for="Capacidade" type="number" class="form-control" />
                    <span asp-validation-for="Capacidade" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AdministradorID" class="form-label"></label>
                    <select asp-for="AdministradorID" class="form-control" asp-items="ViewBag.Administrador"></select>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Criar</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
